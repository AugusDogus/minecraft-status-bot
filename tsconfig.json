{
	"compilerOptions": {
		"strict": true,
		"moduleResolution": "node",
		"removeComments": false,
		"alwaysStrict": true,
		"pretty": true,
		"target": "es2020",
		"lib": ["ESNext", "DOM"],
		"sourceMap": true,
		"inlineSources": true,
		"module": "esnext",
		"declaration": true,
		"declarationMap": true,
		"incremental": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"outDir": "build",
		"rootDir": "src"
	},
	"include": ["src/**/*.ts"],
	"exclude": [""]
}
